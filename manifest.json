{
	"name": "HostAdmin",
		"icons": {
			"128": "icon.png"
		},
		"version": "1.3.8.3",
		"manifest_version": 2,
		"permissions": ["tabs"],
		"description": "Host Admin Tools",
		"background": {
			"persistent": true, 
			"page": "background.html"
		},
		
		"plugins": [{"path": "hostadmin.x86.so"}, {"path": "hostadmin.amd64.so"}, {"path": "hostadmin.dll"},{"path": "hostadmin.plugin"}],
		"browser_action": {
			"default_icon": "icon.png",	
			"default_popup": "popup.html"
		}

}
