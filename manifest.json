			"16" : "icons/icon16.png",
			"24" : "icons/icon24.png",
			"32" : "icons/icon32.png",
			"128": "icons/icon128.png"
		},
		"version": "1.4.3",
		"manifest_version": 2,
		"permissions": ["tabs"],
		"description": "Host Admin Tools",
		"background": {
			"persistent": true, 
			"page": "container/chrome/background.html"
